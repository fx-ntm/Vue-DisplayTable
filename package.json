{
  "name": "vue-displaytable",
  "version": "0.2.0",
  "description": "A highly customizable and modular Table component library for Vue 3, built with TypeScript and Tailwind CSS 4",
  "author": "fx-ntm",
  "license": "MIT",
  "type": "module",
  "main": "./dist/vue-displaytable.umd.js",
  "module": "./dist/vue-displaytable.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/vue-displaytable.es.js",
      "require": "./dist/vue-displaytable.umd.js"
    },
    "./style.css": "./dist/vue-displaytable.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fx-ntm/Vue-DisplayTable.git"
  },
  "bugs": {
    "url": "https://github.com/fx-ntm/Vue-DisplayTable/issues"
  },
  "homepage": "https://github.com/fx-ntm/Vue-DisplayTable#readme",
  "keywords": [
    "vue",
    "vue3",
    "table",
    "data-table",
    "display-table",
    "component",
    "typescript",
    "tailwind",
    "tailwindcss"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "build:lib": "vite build",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.1",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4",
    "vue": "^3.5.24",
    "vue-tsc": "^3.1.4"
  }
}
